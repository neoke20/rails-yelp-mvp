<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- Navigation bar -->
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <a class="navbar-brand mx-4" href="/restaurants">
      <%# <img class="avatar" src="https://picsum.photos/200" /> %>
      <i style="font-size: 28px;" class="fab fa-fort-awesome-alt"></i>
    </a>

    <div class="pr-5" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to new_restaurant_path, class: 'nav-link' do %>
            <i style="font-size: 28px;" class="fas fa-plus-square"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
    <%= yield %>
    <div class="footer">
      <div class="footer-links">
        <a href="https://www.github.com/neoke20" target="_blank"><i class="fab fa-github"></i></a>
        <a href="https://www.linkedin.com/in/konczakkevin/" target="_blank"><i class="fab fa-linkedin"></i></a>
      </div>
      <div class="footer-copyright">
        This footer is made with <i class="fas fa-heart"></i> at Le Wagon
      </div>
    </div>
  </body>
</html>
