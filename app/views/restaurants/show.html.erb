<div class="container">
  <h1 class="text-center my-4"><%= @restaurant.name %></h1>
</div>
<div class="card-trip mx-5">
  <img src="http://source.unsplash.com/featured/?restaurant&#{rand(1000)}" />
  <div class="card-trip-infos">
    <div>
      <h2><%= @restaurant.category.capitalize %></h2>
      <p><%= @restaurant.address %> | ðŸ“ž <%= @restaurant.phone_number %></p>
    </div>
    <h2 class="card-trip-pricing"><%= '$' * rand(1..3) %></h2>
  </div>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: 'btn btn-secondary' %>
  <%# <button class="btn btn-secondary">Add a review</button> %>
</div>

<div class="container mt-5 col-lg-8 col-md-6">
  <h1>Reviews</h1>
  <% @restaurant.reviews.each do |review| %>
    <div class="card-product mb-4">
      <img class="avatar" src="http://source.unsplash.com/featured/?avatar&<%= rand(100) %>" />
      <div class="card-product-infos">
        <p><%= review.content %><br> <% review.rating.times do %><i style="color: #FBC02D;" class="fas fa-star"></i><% end %></p>
      </div>
    </div>
  <% end %>
</div>
